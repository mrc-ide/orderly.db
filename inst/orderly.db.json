{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "orderly/outpack custom schema",
    "version": "0.0.1",

    "type": "object",
    "properties": {
        "query": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "database": {
                        "type": "string"
                    },
                    "query": {
                        "type": "string"
                    },
                    "rows": {
                        "type": "integer"
                    },
                    "cols": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["database", "query", "rows", "cols"],
                "additionalProperties": false
            }
        },
        "view": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "database": {
                        "type": "string"
                    },
                    "as": {
                        "type": "string"
                    },
                    "query": {
                        "type": "string"
                    }
                },
                "required": ["database", "as", "query"],
                "additionalProperties": false
            }
        },
        "connection": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "database": {
                        "type": "string"
                    }
                },
                "required": ["database"],
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}
